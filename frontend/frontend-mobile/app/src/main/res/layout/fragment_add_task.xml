<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFA000"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.task.AddTaskFragment">

    <TextView
        android:id="@+id/tvAddTask"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/layoutAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFA000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/edtAddTaskName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Name of the task"
            android:inputType="text" />

        <EditText
            android:id="@+id/edtAddTaskCost"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Cost for the task"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtAddTaskDescription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Description of the task"
            android:inputType="text|textMultiLine" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnAddTask"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Add" />

    </LinearLayout>

</LinearLayout>