<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTaskRowName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvTaskRowCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvTaskRowDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTaskRowService"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="invisible"
                android:text="Declare a service" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTaskRowStatut"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnTaskRowVoteAgree"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:visibility="invisible"
            android:text="Agree" />

        <Button
            android:id="@+id/btnTaskVoteDisagree"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:visibility="invisible"
            android:text="Desagree" />

        <!--ETAT de la tache-->
        <!--Boutton vote oui/non-->
        <!--Boutton vote supprimer-->

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>